<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Pinata Web API</display-name>

  <!-- API Servlet -->
  <!-- TODO: Might not be necessary -->
  <servlet>
    <servlet-name>Feckless Weasel API Service</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.fecklessweasel.service.api</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Feckless Weasel Web API</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

  <!-- UI Servlet -->
  <servlet>
    <servlet-name>Feckless Weasel UI</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.fecklessweasel.service.webui</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Feckless Weasel POC</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <!-- MySQL Resource -->
  <!-- TODO: Might not be necessary -->
  <resource-ref>
    <description>
      MySQL Database Connection Resource.
    </description>
    <res-ref-name>
      jdbc/FecklessWeaselAPI
    </res-ref-name>
    <res-type>
      javax.sql.DataSource
    </res-type>
    <res-auth>
      Container
    </res-auth>
  </resource-ref>
</web-app>

